<%- include('partials/head', { activeNav: 'orders' }) %>

  <div class="card">
    <div class="flex space-between items-center mb-2">
      <div class="card-header">Manifest Submission Results</div>
      <a class="btn" href="/orders">‚Üê Back to Orders</a>
    </div>

    <div class="table-responsive">
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Reference</th>
            <th>Message</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(function(r){ %>
            <tr>
              <td><%= r.orderId %></td>
              <td>
                <% if (r.success) { %>
                  <span class="badge" style="background:#2b3b2a;border-color:#355f33;">Success</span>
                <% } else { %>
                  <span class="badge" style="background:#3a1f24;border-color:#6b1f2a;">Failed</span>
                <% } %>
              </td>
              <td><%= r.reference || '' %></td>
              <td><%= r.message || '' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

<%- include('partials/foot') %>
